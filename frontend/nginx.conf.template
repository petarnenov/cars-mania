server {
    listen 80;
    server_name _;

    root /usr/share/nginx/html;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    # Proxy API to backend container (docker-compose service name: backend)
    # This will be replaced at runtime if backend is available
    location /api/ {
        # Return 404 for API calls when backend is not available
        return 404;
    }
}
